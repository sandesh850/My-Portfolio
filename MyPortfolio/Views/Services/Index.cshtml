
@{
    @model MyPortfolio.Models.ViewModels.ServicesViewModel
}

<div class="container">

    <!--row 01-->
    @foreach (var data in Model.lst_Services)
    {
        <div class="row IndexPageCard" style="margin-top:3%;border-radius:2px;">

            <!--img left-->
            <div class="col-12 col-md-2 col-lg-2 cl-xl-2 col-xxl-2">
                <div style="padding-top:2%;padding-bottom:0%">
                    @if (data.img != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(data.img)" alt="No Image" style="width:50%;height:50%" />
                    }
                   
                </div>


            </div>

            <!--text middle-->
            <div class="col-12 col-md-8 col-lg-8 cl-xl-8 col-xxl-8">

                <label style="font-size:150%;font-weight:bold">@data.ServiceName</label> <br />
                <p>@data.ServiceDescription</p>

            </div>

            <!--right btn-->
            <div class="col-12 col-md-2 col-lg-2 cl-xl-2 col-xxl-2" style="padding-top:1.5%">
                <a href="https://wa.me/94771634350?text=Hello, can I gate one" target="_blank">
                    <label type="button" class="btn btn-success" style="background-color:aqua;color:black;font-weight:bold">Send Message</label>
                </a>
            </div>
        </div>
    }
   

