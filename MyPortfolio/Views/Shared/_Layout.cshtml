<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPortfolio.styles.css" asp-append-version="true" />
</head>

<body class="AllPgBgColor">

    <header class="AllPgBgColor">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3" style="margin-top:1%">

            <div class="container">

                <!-- brand -->
                <a class="text-decoration-none" style="font-weight:bold;color:#00e5ff;font-size:120%" asp-area="" asp-controller="Home" asp-action="Index">.Ravidu Sandesh</a>

                <!--Hamburger button-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span style="background-color:#00e5ff;border-radius:5px" class="navbar-toggler-icon"></span> <!--Hamburger menu icon-->
                </button>

                <!--My codes (I was fully customize this part)-->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav ms-auto gap-4">

                        <li class="nav-item">
                            <a class="text-decoration-none NavBarTextColor" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="text-decoration-none NavBarTextColor" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>

                        <li class="nav-item">
                            <a class="text-decoration-none NavBarTextColor" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>

                        <li class="nav-item">
                            <a class="text-decoration-none NavBarTextColor" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                        <!--Dropdow-->
                        <li class="nav-item dropdown">

                            <a class="text-decoration-none NavBarTextColor dropdown-toggle" data-bs-toggle="dropdown"
                               aria-expanded="false" role="button" style="color:white;">Admin</a>

                            <ul class="dropdown-menu">

                                <li>
                                    <a class="dropdown-item" asp-controller="AddNewProjects" asp-action="Index">Add personal projects</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="AddNewServices" asp-action="Index">Add new services</a>
                                </li>

                            </ul>
                        </li>

                        <!--Login-->
                        <li class="nav-item dropdown">

                            <a class="text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" 
                            role="button" style="color:white">Login</a>

                            <ul class="dropdown-menu">

                                <li>
                                    <a class="dropdown-item" asp-controller="Login" asp-action="Index" style="color:black">Login</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" style="color:black">Logout</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="AddLogin" asp-action="Index" style="color:black">Add Login</a>
                                </li>

                                <li>
                                    <a class="btn btn-primary dropdown-item" data-bs-toggle="modal" style="background-color:white;color:black;border:none" data-bs-target="#exampleModal">Update Login</a>
                                </li>
                            </ul>

                        </li>


                    </ul>
                </div>
                

            </div>

        </nav>

    </header>

    <!--Modal | current logins-->
    <div class="modal fade" id="exampleModal" style="margin-top:8%" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color:aliceblue;">
                <div class="modal-header" style="display:flex;justify-content:center">
                    <h1 class="modal-title " id="exampleModalLabel" style="font-weight:bold;font-size:200%">Update Login Details</h1>
                    @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
                </div>

                <div class="modal-body">
                    <form>

                        <div class="container">

                            <!--Current username-->
                            <div class=" row">
                               
                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">

                                    <div>
                                        <label style="font-size:100%;font-weight:bold">Current Username</label>
                                    </div>

                                    <div>
                                        <input type="text" placeholder="Current Username" class="form-control" style="width:100%" />
                                    </div>

                                </div>
                            </div>

                            <!--Current password-->
                            <div class=" row" style="margin-top:3%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">

                                    <div>
                                        <label style="font-size:100%;font-weight:bold">Current Password</label>
                                    </div>

                                    <div>
                                        <input type="text" class="form-control" placeholder="Current Password" style="width:100%" />
                                    </div>

                                </div>
                            </div>

                            <!--hr line-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                                   <hr style="background-color:black" />

                                </div>

                            </div>

                            <!--btns-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 d-flex justify-content-end">
                                    <div>
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" style="font-weight:bold">Close</button>
                                        <a class="btn btn-primary" style="text-decoration:none;font-weight:bold"
                                           data-bs-toggle="modal" data-bs-target="#newLogins">OK</a>
                                    </div>
                                    
                                </div>

                            </div>

                        </div>

                      

                    </form>
                </div>
               @*  <div class="modal-footer">
                    <button type="button" >Close</button>
                    <button type="button" class="btn btn-primary">OK</button>
                </div> *@

            </div>
        </div>
    </div>


    <!--Modal | add new logins-->
    <div class="modal fade" id="newLogins" style="margin-top:8%" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color:aliceblue;">
                <div class="modal-header" style="display:flex;justify-content:center">
                    <h1 class="modal-title " id="exampleModalLabel" style="font-weight:bold;font-size:200%">New Login Details</h1>
                    @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
                </div>

                <div class="modal-body">
                    <form>

                        <div class="container">

                            <!--Current username-->
                            <div class=" row">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">

                                    <div>
                                        <label style="font-size:100%;font-weight:bold">New Username</label>
                                    </div>

                                    <div>
                                        <input type="text" placeholder="New Username" class="form-control" style="width:100%" />
                                    </div>

                                </div>
                            </div>

                            <!--Current password-->
                            <div class=" row" style="margin-top:3%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">

                                    <div>
                                        <label style="font-size:100%;font-weight:bold">New Password</label>
                                    </div>

                                    <div>
                                        <input type="text" class="form-control" placeholder="New Password" style="width:100%" />
                                    </div>

                                </div>
                            </div>

                            <!--Confirm password-->
                            <div class=" row" style="margin-top:3%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">

                                    <div>
                                        <label style="font-size:100%;font-weight:bold">Confirm Password</label>
                                    </div>

                                    <div>
                                        <input type="text" class="form-control" placeholder="Confirm Password" style="width:100%" />
                                    </div>

                                </div>
                            </div>

                            <!--hr line-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                                    <hr style="background-color:black" />

                                </div>

                            </div>

                            <!--btns-->
                            <div class="row" style="padding-top:5%">

                                <div class="col-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 d-flex justify-content-end">
                                    <div>
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" style="font-weight:bold">Close</button>
                                        <a class="btn btn-warning" style="text-decoration:none;font-weight:bold;color:whitesmoke;">Update</a>
                                    </div>

                                </div>

                            </div>

                        </div>



                    </form>
                </div>
                @*  <div class="modal-footer">
                    <button type="button" >Close</button>
                    <button type="button" class="btn btn-primary">OK</button>
                </div> *@

            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - MyPortfolio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
